<%= form_tag(@form_path) do %>         
  <div class="form-group">
    <%= label_tag('challenge[title]', 'Título:') %>
    <%= text_field_tag('challenge[title]', @challenge.title,:class =>"form-control")  %>
  </div>
  <div class="form-group">
    <%= label_tag('challenge[description]', 'Descripción:') %>
    <%= text_field_tag('challenge[description]', @challenge.description, :class =>"form-control") %>
  </div>
  <div>
    <%= label_tag('challenge[introduction]', 'Introducción:') %>
    <%= text_area_tag('challenge[introduction]', @challenge.introduction, :class =>"form-control") %>
  </div>
  <!-- Navegación entre la configuración -->
  <nav class="bottom-nav">
    <div class="row">
      <div class="col text-left">
      </div>
      <div class="col text-center">
        <p class="description"></p>
      </div>
      <div class="col text-right">
        <%= submit_tag('Continuar',:class => 'btn btn-primary') %>
      </div>
    </div>
  </nav>
<% end %>