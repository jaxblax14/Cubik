<div class="row">
	<div class="col-xs-12 col-md-4 col-lg-3">
		<h2>
			<%= @challenge.title %>
		</h2>
		<p class="description">
			<%= @challenge.description %>
		</p>
		<div class="actions">
		  <%= button_to 'Iniciar desafío',challenge_intro_new_project_path(@challenge), :class => 'btn btn-success btn-block' %>
    </div>
	</div>
	<div class="col-xs-12 col-md-8 col-lg-9">
		<h5>Información del desafío</h5>
		<p><%= @challenge.introduction %></p>

		<% @challenge_has_units.where(challenge_id:@challenge.id).each do |challenge_has_unit| %>
			<div>
				<h3><%= challenge_has_unit.unit.name%></h3>
				<p><%= challenge_has_unit.instruction %></p>
			</div>
  	<% end %>	
	</div>
</div>
