<!DOCTYPE html>
<html>
  <head>
    <title>AtixLab2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

<body>
  <nav class="navbar navbar-light bg-light">
  <div class="nav">
    <% if current_user.nil? %>
      <a class="btn btn-primary btn-sm" href="<%=new_user_registration_path %>">Registrarse</a>
      <a class="btn btn-outline-secondary btn-sm" href="<%=user_session_path %>">Iniciar sesion</a>
    <% elsif current_user.present? %>
      <a class="btn btn-outline-secondary btn-sm" href="<%= destroy_user_session_path %>" data-method="DELETE">Cerrar sesi√≥n</a>
    <% end %>
   </div>
  </nav>

  <div class="container-fluid">
    <div class="wrapper">
      <%= yield %>
    </div>
  </div>
</body>
</html>
